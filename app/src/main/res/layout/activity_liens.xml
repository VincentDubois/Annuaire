<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_liens"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hexagonalgames.annuaire.LiensActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Sites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="298dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/title"
                android:id="@+id/imageView2"
                android:adjustViewBounds="false"
                android:cropToPadding="false" />

        </LinearLayout>

        <TextView
            android:text="Algo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAlgo" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewAlgo" />

        <TextView
            android:text="Android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAndroid" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewAndroid" />

        <TextView
            android:text="BDD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBDD" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewBDD" />

        <TextView
            android:text="GitHub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewGitHub" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewGitHub" />

        <TextView
            android:text="Html/CSS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHtmlCSS" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewHtmlCSS" />

        <TextView
            android:text="Java"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewJava" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewJava" />

        <TextView
            android:text="Java Script"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewJS" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewJS" />

        <TextView
            android:text="PHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPHP" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:id="@+id/listViewPHP" />

        <TextView
            android:text="Reseaux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewReseaux" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:id="@+id/listViewReseaux" />

        <TextView
            android:text="Divers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDivers" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewDivers" />

    </LinearLayout>


</RelativeLayout>
